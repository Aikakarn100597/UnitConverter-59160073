<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/firstPage"
        android:background="@drawable/unitconverter">

    <TextView
            android:layout_width="170dp"
            android:layout_height="49dp"
            android:text="@string/Unit_converter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.175"
            android:id="@+id/unit_textView" android:fontFamily="@font/roboto_thin" android:textSize="36sp"
            android:textColor="@android:color/white" app:layout_constraintHorizontal_bias="0.497"
            android:background="#645CA4"/>
    <Button
            android:text="@string/length_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/length_button" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/unit_textView" android:layout_marginTop="10dp"
            app:layout_constraintHorizontal_bias="0.501" app:layout_constraintBottom_toTopOf="@+id/weight_button"
            android:background="#6BEBFC" android:layout_marginLeft="50dp" android:layout_marginRight="50dp"
            android:textSize="18sp"/>
    <Button
            android:text="@string/temperature_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/temperature_button" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/weight_button"
            android:layout_marginBottom="80dp" android:background="#6BEBFC" android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp" android:textSize="18sp"/>
    <Button
            android:text="@string/weight_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/weight_button" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintTop_toBottomOf="@+id/length_button"
            app:layout_constraintBottom_toTopOf="@+id/temperature_button" android:background="#6BEBFC"
            android:layout_marginLeft="50dp" android:layout_marginRight="50dp" android:textSize="18sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>